modules = ["python-3.11", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cyrus_sasl", "freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openldap", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40313
externalPort = 3000

[[ports]]
localPort = 41875
externalPort = 4200

[[ports]]
localPort = 43905
externalPort = 3003

[[ports]]
localPort = 44317
externalPort = 3001

[[ports]]
localPort = 46577
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "python manage.py collectstatic --noinput && gunicorn --bind=0.0.0.0:5000 --reuse-port mineral_licenses.wsgi:application"]
